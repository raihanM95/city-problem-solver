@model CityProblemSolver.ViewModels.ComplainViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    ViewData["PageTitle"] = "Create Complain";
    ViewData["Location"] = "Create Complain";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AreaId" class="control-label"></label>
                <select asp-for="AreaId" class ="form-control" asp-items="ViewBag.AreaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ComplainDate" class="control-label"></label>
                <input asp-for="ComplainDate" class="form-control" />
                <span asp-validation-for="ComplainDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComplainDescription" class="control-label"></label>
                <textarea asp-for="ComplainDescription" class="form-control"></textarea>
                <span asp-validation-for="ComplainDescription" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="SolvedDescription" class="control-label"></label>
                <input asp-for="SolvedDescription" class="form-control" />
                <span asp-validation-for="SolvedDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SolvedDate" class="control-label"></label>
                <textarea asp-for="SolvedDate" class="form-control" />
                <span asp-validation-for="SolvedDate" class="text-danger"></span>
